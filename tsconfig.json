{
  "compilerOptions": {
    "target": "ES3",
    "module": "commonjs",
    "declaration": true,
    "allowSyntheticDefaultImports": false,
    "allowJs": false,
    "experimentalDecorators": true,
    "outDir": "./lib",
    "baseUrl": ".",
    "noImplicitAny": true,
    "suppressImplicitAnyIndexErrors": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "strictNullChecks": true,
    "sourceMap": false,
    "alwaysStrict": true,
    "jsx": "react",
    "lib": [
      "dom", "es7", "es6", "es5"
    ]
  },
  "include": [
    "src/*",
    "typings"
  ],
  "exclude": [
    "node_modules/*"
  ]
}
