{
  "name": "react-autosize-textarea",
  "version": "7.1.1",
  "description": "replacement for built-in textarea which auto resizes itself",
  "main": "lib",
  "typings": "lib",
  "scripts": {
    "test": "jest",
    "build": "rm -rf lib && mkdir lib && tsc",
    "preversion": "npm run test",
    "prepublish": "npm run build",
    "start": "styleguidist server",
    "typecheck": "tsc --noEmit",
    "release-version": "smooth-release --validations --npm-version --changelog --gh-release --npm-publish"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/buildo/react-autosize-textarea.git"
  },
  "keywords": [
    "react",
    "react-component",
    "textarea",
    "autosize",
    "resize",
    "height",
    "growing",
    "size"
  ],
  "author": "Francesco Cioria <francesco@buildo.io>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/buildo/react-autosize-textarea/issues"
  },
  "files": [
    "lib",
    "src",
    "examples",
    "styleguide",
    "typings"
  ],
  "homepage": "https://github.com/buildo/react-autosize-textarea",
  "devDependencies": {
    "@types/autosize": "4.0.1",
    "@types/jest": "27.4.1",
    "@types/node": "^16",
    "@types/react": "^16.8.1",
    "@types/react-dom": "^16.8.1",
    "babel-loader": "^7.1.2",
    "babel-preset-buildo": "^0.1.1",
    "css-loader": "^0.28.5",
    "file-loader": "^1.1.5",
    "jest": "^27.1.4",
    "node-sass": "^7.0.1",
    "progress-bar-webpack-plugin": "^1.10.0",
    "raw-loader": "^0.5.1",
    "react": "^17",
    "react-dom": "^17",
    "react-styleguidist": "^6.0.33",
    "react-test-renderer": "^17",
    "require-dir": "^0.3.0",
    "sass-loader": "^7",
    "smooth-release": "^8.0.0",
    "styled-components": "^5.3.5",
    "ts-jest": "^27.1.4",
    "ts-loader": "^2.3.3",
    "typescript": "^4.6.3",
    "url-loader": "^0.5.9",
    "webpack": "3.5.5"
  },
  "peerDependencies": {
    "react": "^0.14.0 || ^15.0.0 || ^16.0.0 || ^17.0.0",
    "react-dom": "^0.14.0 || ^15.0.0 || ^16.0.0 || ^17.0.0"
  },
  "dependencies": {
    "autosize": "^4.0.2",
    "line-height": "^0.3.1",
    "prop-types": "^15.5.6"
  },
  "jest": {
    "transform": {
      "^.+\\.tsx?$": "<rootDir>/node_modules/ts-jest/preprocessor.js"
    },
    "testRegex": "(.*[.](test))[.](tsx?)$",
    "moduleFileExtensions": [
      "js",
      "ts",
      "tsx"
    ]
  }
}
